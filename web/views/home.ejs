<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/stylesheets/home.css">
</head>

<body>
    <header>
        <%- include('partials/header') %>
    </header>
    <main>
        <section id="blog">
            <h1>Ãšltimas entradas del blog</h1>
            <div class="container">
                <% posts.forEach((post)=> { %>
                    <a href="/entrada/<%= post.id %>" class="contenido">
                        <div class="box">
                            <img src="<%= post.thumbnail %>" alt="<%= post.title || 'Imagen del post' %>">
                        </div>
                        <p>
                            <%= post.title %>
                        </p>
                    </a>
                    <% }) %>
            </div>
        </section>
    </main>
    <footer>
        <%- include('partials/footer') %>
    </footer>
</body>

</html>